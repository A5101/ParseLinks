@page "/searchpage"
@model JanuaryTask.Pages.Shared.SearchPageModel
@{
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Ubuntu+Sans:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&family=Oswald:wght@200..700&display=swap" rel="stylesheet">
</head>
<body onload="showListItems()" style="font-family:'Exo 2'">
    <div class="container">
        <h3 class="" style="font-family:'Exo 2'">Найдется всё</h3>
        <form id="search-form" method="post" class="d-flex justify-content-center">
            <div class="input-group mb-3">
                <input type="text" name="request" id="search-input" class="form-control" style="max-width: 500px;" />
                <div class="input-group-append ms-2">
                    <input type="submit" value="Найти" class="btn btn-outline-primary" />
                    <button type="button" class="btn btn-outline-secondary" onclick="startVoiceSearch()"><i class="fas fa-microphone"></i></button>
                    <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="filter-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"><path fill-rule="evenodd" d="M16 4c.439 0 .85 0 1.162.021.33.023.66.072.986.207a3 3 0 011.624 1.624c.135.326.184.656.207.986l.009.162H22v2h-2.012l-.01.162c-.022.33-.071.66-.206.986a3 3 0 01-1.624 1.624 3.073 3.073 0 01-.986.207C16.85 12 16.44 12 16 12c-.439 0-.85 0-1.162-.021a3.072 3.072 0 01-.986-.207 3 3 0 01-1.624-1.624 3.07 3.07 0 01-.207-.986A6.416 6.416 0 0112.012 9H2V7h10.012l.01-.162c.022-.33.071-.66.206-.986a3 3 0 011.624-1.624c.326-.135.656-.184.986-.207C15.15 4 15.56 4 16 4zm-1.026 2.017c-.228.015-.315.042-.357.06a1 1 0 00-.54.54c-.018.042-.045.129-.06.357C14 7.21 14 7.52 14 8s0 .79.017 1.026c.015.228.042.315.06.357a1 1 0 00.54.54c.042.018.129.045.357.06C15.21 10 15.52 10 16 10s.79 0 1.026-.017c.228-.015.315-.042.357-.06a1 1 0 00.54-.54c.018-.042.045-.129.06-.357C18 8.79 18 8.48 18 8s0-.79-.017-1.026c-.015-.228-.042-.315-.06-.357a1 1 0 00-.54-.54c-.042-.018-.129-.045-.357-.06A16.908 16.908 0 0016 6c-.48 0-.79 0-1.026.017zM4.012 15H2v2h2.012l.01.162c.022.33.071.66.206.986a3 3 0 001.624 1.624c.326.135.656.184.986.207C7.15 20 7.56 20 8 20c.439 0 .85 0 1.162-.021.33-.023.66-.072.986-.207a3 3 0 001.624-1.624c.135-.326.184-.656.207-.986l.009-.162H22v-2H11.988a6.928 6.928 0 00-.01-.162 3.072 3.072 0 00-.206-.986 3 3 0 00-1.624-1.624 3.07 3.07 0 00-.986-.207C8.85 12 8.44 12 8 12c-.439 0-.85 0-1.162.021a3.07 3.07 0 00-.986.207 3 3 0 00-1.624 1.624 3.069 3.069 0 00-.207.986 6.614 6.614 0 00-.009.162zm2.605-.924c.042-.017.129-.044.357-.06C7.21 14.002 7.52 14 8 14s.79 0 1.026.017c.228.015.315.042.357.06a1 1 0 01.54.54c.018.042.045.129.06.357C10 15.21 10 15.52 10 16s0 .79-.017 1.026c-.015.228-.042.315-.06.357a1 1 0 01-.54.54c-.042.018-.129.045-.357.06C8.79 18 8.48 18 8 18s-.79 0-1.026-.017c-.228-.015-.315-.042-.357-.06a1 1 0 01-.54-.54c-.018-.042-.045-.129-.06-.357A16.908 16.908 0 016 16c0-.48 0-.79.017-1.026.015-.228.042-.315.06-.357a1 1 0 01.54-.54z" clip-rule="evenodd"></path></svg>
                    </button>
                </div>
            </div>
        </form>
        <div class="dropdown-menu container w-auto p-3" aria-labelledby="filter-btn" id="filter-dropdown">
            <h3 style="font-family:'Exo 2'">Фильтры</h3>
            <div class="row w-100">
                <div class="col">
                    <div class="form-group">
                        <label for="period-filter">Период:</label>
                        <select class="form-select w-100" id="period-filter">
                            <option value="">Выберите период</option>
                            <option value="today">Сегодня</option>
                            <option value="week">Неделя</option>
                            <option value="month">Месяц</option>
                            <option value="year">Год</option>
                        </select>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="date-filter">Дата:</label>
                        <input type="date" class="form-control" id="date-filter">
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        <label for="language-filter">Язык:</label>
                        <select class="form-select w-100" id="language-filter">
                            <option value="ru">Русский</option>
                            <option value="en">Английский</option>
                            <option value="fr">Французский</option>
                            <option value="es">Испанский</option>
                            <option value="de">Немецкий</option>
                            <option value="it">Итальянский</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="d-block text-center">
                <button type="button" class="btn btn-primary mt-2 mx-auto" id="apply-filters">Применить фильтры</button>
            </div>
        </div>



        @if (Model.Result.Count > 0)
        {
            <h3 class="mt-3 text-center">Результаты поиска по запросу "@ViewData["SearchQuery"]" (@Model.Result.Count страниц):</h3>
            @foreach (var entity in Model.Result)
            {

                <div class="list-group-item mb-3 mt-3" style="border-radius: 2ex !important;">
                    <i class="fa fa-globe" aria-hidden="true"></i>
                    <a class="fw-bold" href="@entity.Url">@entity.Tittle</a>
                    <br>
                    @if (entity.Domain == "lenta.ru")
                    {
                        <a class="fs-5" href="@entity.Domain">@entity.Domain - Лента.Ру</a>
                    }
                    else
                    {
                        <a class="fs-5" href="@entity.Domain">@entity.Domain - Интерфакс</a>
                    }
                    <p>...@Html.Raw(entity.MatchContent)..</p>
                </div>

            }
        }
        else
        {

        }
    </div>
</body>
<script>
    if ('webkitSpeechRecognition' in window) {
        var recognition = new webkitSpeechRecognition();
        recognition.continuous = false;
        recognition.interimResults = true;
        recognition.lang = 'ru-RU';

        var finalTranscript = '';
        var timeoutId;

        recognition.onresult = function (event) {
            var transcript = event.results[0][0].transcript;
            transcript = transcript.replace(/\.$/, '');
            finalTranscript = transcript;

            clearTimeout(timeoutId);
            timeoutId = setTimeout(function () {
                document.getElementById("search-input").value = finalTranscript;
                document.getElementById("search-form").submit();
            }, 300);

            document.getElementById("search-input").value = transcript;
        };

        function startVoiceSearch() {
            recognition.start();

            var microphoneButton = event.target;
            microphoneButton.classList.add('bg-success');
            microphoneButton.classList.remove('btn-outline-secondary');

            setTimeout(function () {
                recognition.stop();

                microphoneButton.classList.remove('bg-success');
                microphoneButton.classList.add('btn-outline-secondary');
            }, 5000);
        }
    }
    function showListItems() {
        var listItems = document.querySelectorAll('.list-group-item');

        for (var i = 0; i < listItems.length; i++) {
            setTimeout(function (index) {
                listItems[index].classList.add('show');
            }, 250 * i, i);
        }
    }
    var filterBtn = document.getElementById("filter-btn");

    var filterDropdown = document.getElementById("filter-dropdown");

    filterBtn.addEventListener("click", function () {

        if (filterDropdown.style.display === "block") {
            filterDropdown.style.display = "none";
            filterBtn.classList.remove("bg-success");
            filterBtn.classList.add("btn-outline-secondary");
        }
        else {
            filterDropdown.style.display = "block";
            filterBtn.classList.add("bg-success");
            filterBtn.classList.remove("btn-outline-secondary");
        }
    });


    filterDropdown.addEventListener("transitionend", function () {
        if (filterDropdown.style.display === "none") {
            filterBtn.classList.remove("bg-success");
            filterBtn.classList.add("btn-outline-secondary");
        }
    });
    var periodFilter = document.getElementById("period-filter");
    var dateFilter = document.getElementById("date-filter");

    periodFilter.addEventListener("change", function () {
        if (this.value === "") {
            dateFilter.disabled = false;
        }
        else {
            dateFilter.disabled = true;
        }
    });

    dateFilter.addEventListener("change", function () {
        if (this.value !== "") {
            periodFilter.value = "";
            periodFilter.disabled = true;
        }
        else {
            periodFilter.disabled = false;
        }
    });

    dateFilter.disabled = false;
    periodFilter.disabled = false;
</script>
<style>
    .btn:focus,
    .btn:active:focus {
        box-shadow: none;
        outline: none;
    }
    body {
        font-family: 'DM Sans', sans-serif;
    }

    a {
        text-decoration: none !important;
    }

    .list-group-item {
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.3s ease-out;
    }

        .list-group-item.show {
            opacity: 1;
            transform: translateY(0);
        }
</style>
